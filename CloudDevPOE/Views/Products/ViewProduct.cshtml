@model CloudDevPOE.ViewModels.ProductDetailsViewModel

@{
	ViewData["Title"] = Model.ProductName;
}

<head>
@* 	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
	<link rel="stylesheet" href="~/css/base.css" asp-append-version="true" /> *@

	<style>
		.product-details {
			display: flex;
		}

		.image-slider {
			flex: 1;
		}

		.product-info {
			flex: 1;
		}
	</style>
</head>

<div class="wt-pb-xs-4">
	<a href="@Url.Action("MyWork", "Products")" class="wt-arrow-link wt-arrow-link--back wt-text-gray wt-text-caption">Back to search results</a>
</div>

<main>
	<div class="product-details">
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				@for (var i = 0; i < Model.ImageUrls.Count; i++)
				{
					<li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
				}
			</ol>
			<div class="carousel-inner">
				@for (var i = 0; i < Model.ImageUrls.Count; i++)
				{
					<div class="carousel-item @(i == 0 ? "active" : "")">
						<img class="d-block w-100" src="@Model.ImageUrls[i]" alt="Product Image">
					</div>
				}
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
		</div>

		<div class="product-info">
			<h2>@Model.ProductName</h2>
			<p>@Model.ProductCategory</p>
			<p>@Model.ProductDescription</p>
			<p>@Model.ProductPrice.ToString("C")</p>
		</div>
	</div>
</main>

@section Scripts {
@* 	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script> *@
}


