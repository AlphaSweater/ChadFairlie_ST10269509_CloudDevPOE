<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CloudDevPOE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CloudDevPOE.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/navbar.css" asp-append-version="true" />
    

    <!-- Boxiocns CDN Link -->
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');

        body {
            background: repeating-linear-gradient( to right, #b85e75 0%, #b85e75 14.28%, #e76c6a 14.28%, #e76c6a 28.56%, #e18b50 28.56%, #e18b50 42.84%, #3dabc3 42.84%, #3dabc3 57.12%, #2da696 57.12%, #2da696 71.4%, #48c9af 71.4%, #48c9af 85.68%, #0194c4 85.68%, #0194c4 100% );
            overflow: hidden;
            height: 100vh;
            margin: 0;
            padding: 0;
        }

        .main-content {
            -ms-overflow-style: none;
            scrollbar-width: none;
            border: 20px solid #f0f0f0;
            width: 1270px;
            height: 850px;
            background-color: #f0f0f0;
            border-radius: 30px;
            overflow: auto;
            margin: 25px auto;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        
        .scrollable-content::-webkit-scrollbar {
            display: none;
        }
        
    </style>
</head>
<body>
    <div class="main-content" >
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div style="width: 20px;"></div> <!-- 20px gap -->
            <a class="navbar-brand" href="#">
                <img src="~/images/logo_2.png" alt="Logo of KhumaloCraft Emporium" height="auto" width="200px"> <!-- Logo -->
            </a> 
            <div style="width: 10px;"></div> <!-- 10px gap -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="ContactUs">ContactUs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Main">Main</a>
                    </li>
                </ul>
            </div>
            <div style="width: 40px;"></div> <!-- 40px gap -->
            <form class="form-inline">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search"> <!-- Search bar -->
            </form>
            <div style="width: 30px;"></div> <!-- 30px gap -->
            <i class='bx bx-cog'></i> <!-- Settings icon -->
            <div style="width: 10px;"></div> <!-- 10px gap -->
            <i class='bx bx-user'></i> <!-- Account icon -->
            <div style="width: 10px;"></div> <!-- 10px gap -->
            <i class='bx bx-cart'></i> <!-- Cart icon -->
            <div style="width: 30px;"></div> <!-- 30px gap -->
        </nav>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        var mainContent = document.querySelector('.main-content');
        var scrollSpeed = 0.9; // Adjust this value to change the scroll speed

        document.body.addEventListener('wheel', function (e) {
            if (!mainContent.contains(e.target)) {
                var to = mainContent.scrollTop + e.deltaY * scrollSpeed;
                mainContent.scrollTop = to;
                e.preventDefault();
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
